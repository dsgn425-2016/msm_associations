<div class="page-header">
  <h3>Actor #<%= @actor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @actor.name %></dd>

      <dt>Image</dt>
      <dd>
        <img src="<%= @actor.image_url %>" height="150px">
      </dd>

      <dt>Dob</dt>
      <dd><%= @actor.dob %></dd>

      <dt>Bio</dt>
      <dd><%= truncate(@actor.bio) %></dd>

      <dt># Films</dt>
      <dd><%= Character.where(:actor_id => @actor.id).count %></dd>

      <dt>Film List (Filmography)</dt>
      <dd>
        <ul>
          <% Character.where(:actor_id => @actor.id).each do |character| %>
            <li><%= Movie.find(character.movie_id).title %> (<%= character.name %>)</li>
          <% end %>
        </ul>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/actors" class="btn btn-primary">
        Back
      </a>
      <a href="/actors/<%= @actor.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
